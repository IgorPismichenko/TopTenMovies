<div>
    <h3>Топ 10 Фільмів</h3>
    @foreach (var m in ViewBag.Movies)
    {
        <div id="main">
            <div id="poster"><img src=@m.Poster /></div>
            <div id="info">
                <h2>@m.Title</h2>
                <label>Режисер: @m.Director</label><br />
                <label>Жанр: @m.Genre</label><br />
                <label>Рік: @m.Year</label><br />
                <p>Опис: @m.Description</p>
            </div>
        </div>
    }
</div>